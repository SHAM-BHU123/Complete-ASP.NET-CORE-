@if(ViewBag.CurrentSortBy==ViewBag.ColumnName && ViewBag.CurrentSortOrderOptions == SortOrderOptions.ASC.ToString())
                {
                  <th>
                      <div class="flex">
                <a 
                    href="~/persons/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&SortOrderOptions=@(nameof(SortOrderOptions.DESC))">
                     @(ViewBag.DisplayName)
                   
                    
                </a>
                <svg xmlns="http://www.w3.org/2000/svg" 
                            fill="none" 
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            hight="20px"
                            width="20px"
                            stroke="blue" 
                            class="icon-up icon-small">
                        <path stroke-linecap="round" 
                                 stroke-linejoin="round" 
                                d="M19.5 8.25l-7.5 7.5-7.5-7.5"
                         />
                        </svg>
                </div>
                
                 </th>
                }

                else if(ViewBag.CurrentSortBy==ViewBag.ColumnName && ViewBag.CurrentSortOrderOptions == SortOrderOptions.DESC.ToString())
                {
                    <th>
                        <div class="flex">

                       
                <a 
                    href="~/persons/index?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&SortOrderOptions=@(nameof(SortOrderOptions.ASC))">
                    
                    @(ViewBag.DisplayName)
                    

                </a>
                <svg xmlns="http://www.w3.org/2000/svg" 
                    fill="none" 
                    viewBox="0 0 24 24" 
                    stroke-width="1.5"
                     hight="20px"
                     width="20px"
                    stroke="currentColor" 
                    class="w-6 h-6">
                   <path stroke-linecap="round" 
                   stroke-linejoin="round"
                   d="M4.5 15.75l7.5-7.5 7.5 7.5" />
                     </svg>

                      </div>
                    </th>
                }

                else
                {
                   <th>
                <a 
                    href="~/persons/index?searchBy=@(ViewBag.CurrentSearchBy)& searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)& SortOrderOptions=@(nameof(SortOrderOptions.ASC))">
                    @(ViewBag.DisplayName)
                </a>
                    </th>
                }
